/* pages/questionnaire/questionnaire.wxss */

page {
  background-color: rgb(248, 248, 248);
}
.view {
  background-color: white;
  margin-right: 20px;
  margin-left: 20px;
  margin-top: 40%;
  height: auto;
  border-radius: 25px;
  box-shadow: 2px 2px 10px #888;
}

.titel-view {
  background-color: rgb(245, 200, 0);
  height: 30px;
  text-align: center;
  padding: 10px 40px;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
}

.scroll-view {
}

.view-question {
  margin: 20px;
  text-align: center;
}

.radio-group {
  margin-bottom: 30px;
  margin-left: 30px;
  text-align: left;
  display: flex;
  flex-direction: column;
}

.button-view {
  margin-top: 40px;
  margin-left: 40px;
  margin-right: 40px;
  text-align: center;
  display: flex;
  flex-direction: row;
}

button {
  font-size: 15px;
  width: 130px;
  height: 30px;
  color: whitesmoke;
}

.pre-btn {
  background-color: rgb(51, 51, 51);
}

.next-btn {
  background-color: rgb(245, 200, 0);
}

.time{
  text-align: center;
  margin-top: 20px;
}
